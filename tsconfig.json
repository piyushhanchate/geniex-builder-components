{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  ,
  "jsx": "react", 
  "module": "ESNext",  
  "declaration": true,
  "declarationDir": "types",
  "declarationMap": true,
  "outDir": "dist",
  "moduleResolution": "node",
  "allowSyntheticDefaultImports": true,
  "emitDeclarationOnly": true,
  }
}
